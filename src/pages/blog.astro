---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogSpot from '../components/BlogPost.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = 'Mi blog de Astro aprendizaje';
---

<BaseLayout pageTitle={pageTitle}>
  <p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
  <ul>
    <!-- <li><a href="/posts/post-1">Publicación 1</a></li> -->

    {
      allPosts.map((post) => (
        <li>
          <BlogSpot title={post.frontmatter.title} url={post.url} />
        </li>
      ))
    }
  </ul>
</BaseLayout>
